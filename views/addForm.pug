extends layout

block content
  h1 Add #{type.charAt(0).toUpperCase() + type.slice(1)}
  form(method="POST", action=`/admin/${type}/add`)
    .mb-3
      input.form-control(type="text", name="name", placeholder="Name", required)
    if type === 'products' || type === 'services'
      .mb-3
        input.form-control(type="number", name="price", placeholder="Price", required)
    if type === 'products'
      .mb-3
        input.form-control(type="text", name="description", placeholder="Description", required)
      .mb-3
        input.form-control(type="text", name="image", placeholder="Image URL")
    if type === 'locations'
      .mb-3
        input.form-control(type="text", name="address", placeholder="Address", required)
      .mb-3
        input.form-control(type="text", name="phone", placeholder="Phone", required)
    if type === 'services'
      .mb-3
        input.form-control(type="text", name="description", placeholder="Description", required)
    button.btn.btn-success(type="submit") Add
